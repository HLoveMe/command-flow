{
  "compilerOptions": {
    "target": "es5",
    "downlevelIteration":true,
    "allowJs": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports":true,
    "emitDecoratorMetadata":true,
    "outDir": "dist/cjs",
    "sourceMap": false,
    "noImplicitAny": false,
    "module": "commonjs", // 你的代码是commonjs的
    "types": ["node"],
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "**/*.d.ts", "src/**/*", "test.ts"],
  "exclude": ["node_modules","src/**/*.ignore.node.ts","src/**/*.ignore.web.ts"]
}

