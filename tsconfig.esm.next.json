{
  "compilerOptions": {
    "target": "es2015",
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata":true,
    "allowSyntheticDefaultImports":true,
    "outDir": "dist/esm",
    "sourceMap": true,
    "noImplicitAny": false,
    "importHelpers":true,
    "module": "esnext",
    "watch": false,
    "skipLibCheck": true,
    "moduleResolution":"node"
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "**/*.d.ts", "src/**/*", "test.ts"],
  "exclude": ["node_modules","src/**/*.ignore.node.ts","src/**/*.ignore.web.ts"]
}
