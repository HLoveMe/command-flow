{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata":true,
    "noImplicitAny": false,
    "module": "esnext",
    "skipLibCheck": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "noEmit": false,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "incremental": true,
    "removeComments": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "**/*.d.ts", "src/**/*", "test.ts"],
  "exclude": ["node_modules","src/**/*.ignore.node.ts","src/**/*.ignore.web.ts"]
}
